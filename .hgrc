[ui]
username = sirex <sirexas@gmail.com>
merge = kdiff3

[merge-tools]
kdiff3.args = $base $local $other -o $output

[extensions]
hgext.bookmarks =
hgext.churn =
hgext.color = 
hgext.convert = 
hgext.extdiff =
hgext.fetch = 
hgext.graphlog =
hgext.hgk =
hgext.mq =
hgext.pager =
hgext.progress = 
hgext.rebase = 
hgext.record =

[diff]
git = 1

[extdiff]
cmd.vdiff = meld
cmd.vkdiff = kdiff3
cmd.vimdiff =

[merge-tools]
kdiff3.args = --L1 base --L2 local --L3 other $base $local $other -o $output

[alias]
ds = diff --stat
qds = qdiff --stat

[defaults]
log = --template '----------------------------------------------------------------------------\n{rev} | {author|user} | {date|shortdate} ({date|age}) | {diffstat} {branches} {tags} {bookmarks}\n\n{desc|fill76}\n\n\n' 

[pager]
pager = less -FSRX
attend = annotate, cat, diff, export, glog, log, qdiff, help, heads
