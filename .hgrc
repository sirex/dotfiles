[ui]
username = sirex <sirexas@gmail.com>
merge = kdiff3

[merge-tools]
kdiff3.args = $base $local $other -o $output

[extensions]
hgext.extdiff =
hgext.convert = 
hgext.fetch = 
hgext.rebase = 
hgext.churn =
hgext.color = 
hgext.mq =
hgext.graphlog =
transplant =
hgext.bookmarks =
hgext.progress = 
hgext.record =
hgk =

[extdiff]
cmd.vdiff = meld
cmd.vkdiff = kdiff3
cmd.vimdiff =

[merge-tools]
kdiff3.args=--L1 base --L2 local --L3 other $base $local $other -o $output


[alias]
vi = vimdiff
vim = vimdiff
ds = diff --stat
qds = qdiff --stat
slog = log --limit 8 --template '{rev} | {date|shortdate} | {author|person}\t| {desc|fill68|firstline|strip}\n'
slog = log --limit 24 --template '\033[0;33m{rev} \033[0m|\033[1;30m {date|shortdate} \033[0m|\033[0;33m {author|person}: \033[0m{desc|fill68|firstline|strip}\033[1;33m{branches} {tags}\033[0m\n' 
kudos = churn -t '{author|person}' --diffstat

[defaults]
glog = --limit 8 --template '\033[0;33m{rev}\033[1;30m {date|shortdate} \033[0;33m{author|person}\033[0m {branches}{tags}\n{desc|fill68|firstline|strip}\n\n' 
