# vim: ft=conf nospell

#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window  yes
own_window_transparent no
own_window_type normal
own_window_hints undecorate,sticky,skip_taskbar,skip_pager

#borders
draw_borders no
border_margin 1

#shades
draw_shades no

#position
gap_x 0
gap_y 0
alignment bottom_left

#behaviour
update_interval 1

#colour
default_color  6d6d6d

#default_shade_color 000000
own_window_colour 303030

#font
use_xft yes
xftfont terminus:pixelsize=14

#to prevent window from moving
use_spacer yes
minimum_size 1024 0

TEXT
${color} Up: ${color A0A0A0}${uptime_short}   ${color}Cpu: ${color A0A0A0}${cpu}%   ${color}${cpugraph cpu1 10,40 AEA08E 9F907D} ${cpugraph cpu2 10,40 AEA08E 9F907D} ${color A0A0A0}   ${color }DL: ${color A0A0A0}${font}${downspeedgraph wlan0 10,80 AEA08E 9F907D} ${downspeed wlan0} Kb/s   ${color }UL: ${color A0A0A0}${font}${upspeedgraph wlan0 10,80 AEA08E 9F907D} ${upspeed wlan0} Kb/s   ${color }Mem: ${color A0A0A0}$mem/$memmax - $memperc% ${color}
